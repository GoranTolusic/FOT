{% extends 'base.html.twig' %}

{% block title %}Login Page{% endblock %}

{% block body %}
    <div class="login-container">
        <h1>{{ message }}</h1>

        <form action="/auth/login" method="POST" class="login-form">
            <input type="email" name="email" value="{{ defaultEmail }}" placeholder="Email" required>
            <input type="password" name="password" value="{{ defaultPassword }}" placeholder="Password" required>
            <button type="submit">Login</button>
        </form>

        {% if errormsg %}
            <p class="error-msg">{{ errormsg }}</p>
        {% endif %}
    </div>
{% endblock %}
