{% extends 'base.html.twig' %}

{% block title %}Login Page{% endblock %}

{% block body %}
<h1>{{ message }}</h1>

<form action="/auth/login" method="POST">
    <input type="email" name="email" value="{{ defaultEmail }}" placeholder="Email" required>
    <input type="password" name="password" value="{{ defaultPassword }}" placeholder="Password" required>
    <button type="submit">Login</button>
</form>

<h1>{{ errormsg }}</h1>

{% endblock %}