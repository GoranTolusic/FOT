{% extends 'base.html.twig' %}

{% block title %}Author Details{% endblock %}

{% block body %}
    {% if err %}
        <h1>{{ err }}</h1>
    {% else %}
        <h1>Author Details</h1>

        <div class="author-info">
            <p><strong>First Name:</strong> {{ user['first_name'] }}</p>
            <p><strong>Last Name:</strong> {{ user['last_name'] }}</p>
            <p><strong>Gender:</strong> {{ user['gender'] }}</p>
           <p><strong>Birthday:</strong> 
                {% if user['birthday'] %}
                    {{ user['birthday']|date("d-m-Y") }}
                {% else %}
                    N/A
                {% endif %}
            </p>
            <p><strong>Place of Birth:</strong> {{ user['place_of_birth'] }}</p>
        </div>

        {% if user.books is empty %}
            <form method="post" action="{{ path('author_delete', {id: user.id}) }}" 
                  onsubmit="return confirm('Are you sure you want to delete this author?');" 
                  class="delete-form">
                <button type="submit">Delete Author</button>
            </form>
        {% endif %}

        <h2>Books:</h2>
        <table class="books-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for book in user.books %}
                    <tr>
                        <td>{{ book.id }}</td>
                        <td>{{ book.title }}</td>
                        <td>{{ book.description }}</td>
                        <td>
                            <form method="post" action="{{ path('book_delete', {id: book.id}) }}" 
                                  onsubmit="return confirm('Are you sure you want to delete this book?');">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">No books found.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <style>
        .author-info p {
            margin: 5px 0;
        }

        .delete-form {
            margin: 10px 0;
        }

        .books-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        .books-table th,
        .books-table td {
            border: 1px solid #ccc;
            padding: 5px 8px;
            text-align: left;
        }

        .books-table th {
            background-color: #f0f0f0;
        }

        .books-table form button {
            padding: 4px 8px;
            cursor: pointer;
        }
    </style>
{% endblock %}
